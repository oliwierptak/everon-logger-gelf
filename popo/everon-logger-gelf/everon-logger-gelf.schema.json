[
    {
        "name": "GelfLoggerPluginConfigurator",
        "extends": "\\Everon\\Logger\\Configurator\\AbstractArrayableConfigurator",
        "schema": []
    },
    {
        "name": "GelfLoggerPluginSslOptions",
        "extends": "\\Everon\\Logger\\Configurator\\AbstractArrayableConfigurator",
        "schema": [
            {
                "name": "verifyPeer",
                "type": "bool",
                "default": true,
                "docblock": "Enable certificate validation of remote party"
            },
            {
                "name": "allowSelfSigned",
                "type": "bool",
                "default": false,
                "docblock": "Allow self-signed certificates"
            },
            {
                "name": "caFile",
                "type": "string",
                "docblock": "Path to custom CA"
            },
            {
                "name": "ciphers",
                "type": "string",
                "docblock": "List of ciphers the SSL layer may use. Formatted as specified in `ciphers(1)`"
            },
            {
                "name": "useSsl",
                "type": "bool",
                "default": false,
                "docblock": "Whenever to use Gelf\\Transport\\SslOptions"
            }
        ]
    }
]
